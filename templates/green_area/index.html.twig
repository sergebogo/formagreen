{% extends 'base.html.twig' %}

{% block title %}FormaGreen::Green Areas{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css"
          integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
          crossorigin=""/>
    <!-- CSS -->
    <style>
        #green_areas_map {
            height: 80vh;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 ml-auto mr-auto">
            <div class="row">
                <div class="col-md-3">
                    <a href="{{ path('greenarea_list') }}" class="btn btn-info btn-block">Green Areas List <i
                                class="material-icons">list</i></a>
                </div>
                <div class="col-md-3">
                    <a href="{{ path('new_greenarea') }}" class="btn btn-success btn-block">New Green Area <i
                                class="material-icons">nature</i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 ml-auto mr-auto">
            <div id="green_areas_map"></div>
        </div>
    </div>
    {% block javascripts %}
        <!-- Fichiers Javascript -->
        <script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js"
                integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og=="
                crossorigin=""></script>
        <script src="/assets/js/showInMap.js"></script>

    {% endblock %}
{% endblock %}
