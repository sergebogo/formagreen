{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ member.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ member.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ member.roles ? member.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ member.password }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ member.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ member.prenom }}</td>
        </tr>
        <tr>
            <th>LastConnexion</th>
            <td>{{ member.lastConnexion ? member.lastConnexion|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>{{ member.active ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>

