<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-success">
                <h4 class="card-title">Create new Partnership</h4>
                <p class="card-category">Saisir les informations</p>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(form.ps_shop_name, 'Nom du commerce', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                            {{ form_widget(form.ps_shop_name, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(form.ps_shop_addr, 'Adresse', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                            {{ form_widget(form.ps_shop_addr, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {#{{ form_label(form.ps_shop_category, 'Spécialité du commerce', {'label_attr': {'class': 'bmd-label-floating'}}) }}#}
                            {{ form_widget(form.ps_shop_category, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                </div>
                <button class="btn btn-success pull-right">{{ button_label|default('Enregistrer') }} <i
                            class="material-icons">done</i></button>
                <div class="clearfix"></div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
