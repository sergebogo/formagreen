<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-success">
                <h4 class="card-title">Create new {{ entity }}</h4>
                <p class="card-category">Saisir les informations</p>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.mb_nom, 'Nom', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                            {{ form_widget(form.mb_nom, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.mb_prenom, 'Prénom', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                            {{ form_widget(form.mb_prenom, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {#{{ form_label(form.mb_gender, 'Genre', {'label_attr': {'class': 'bmd-label-floating'}}) }}#}
                            {{ form_widget(form.mb_gender, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(form.mb_adresse, 'Adresse', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                            {{ form_widget(form.mb_adresse, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.mb_email, 'Email', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                            {{ form_widget(form.mb_email, { 'attr': {'class': 'form-control', 'pattern': '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,63}$'} }) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.mb_phone, 'Téléphone', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                            {{ form_widget(form.mb_phone, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                        </div>
                    </div>
                </div>

                {# Ce block va s'afficher si le membre est de type Volunteer #}
                {% if entity == 'Volunteer' %}
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {#{{ form_label(form.vt_mobility, 'Mobilité ?', {'label_attr': {'class': 'bmd-label-floating'}}) }}#}
                                {{ form_widget(form.vt_mobility, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.vt_skills, 'Compétences', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                                {{ form_widget(form.vt_skills, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.vt_years_exp, "Année d'experience", {'label_attr': {'class': 'bmd-label-floating'}}) }}
                                {{ form_widget(form.vt_years_exp, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                    {# Fin du block pour les memebre de type Volunteer #}
                {% elseif entity == 'Structure' %}
                    {# Ce block va s'afficher si le membre est de type Structure #}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.st_secteur, "Secteur d'activité de la structure", {'label_attr': {'class': 'bmd-label-floating'}}) }}
                                {{ form_widget(form.st_secteur, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.st_website, 'Site web de la structure', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                                {{ form_widget(form.st_website, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.st_country_origi, 'Pays de la structure', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                                {{ form_widget(form.st_country_origi, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.representing, 'Nom complet du représentant', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                                {{ form_widget(form.representing, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                    {# Fin du block pour les memebre de type Structure #}
                {% endif %}

                <button class="btn btn-success pull-right">{{ button_label|default('Enregistrer') }} <i
                            class="material-icons">done</i></button>
                <div class="clearfix"></div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {% if step is defined and step == 'edit' %}
        <div class="col-md-4">
            <div class="card card-profile">
                <div class="card-body">
                    <h6 class="card-category text-gray">QR CODE DE L'UTILISATEUR</h6>
                    <p class="card-description">
                        <img class="img" src="{{ "/assets/img/qrcodes/" ~ member.getQrCode }}" alt="Qrcode Utilisateur"/>
                    </p>
                </div>
            </div>
        </div>
    {% endif %}
</div>
