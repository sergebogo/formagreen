{% extends 'base.html.twig' %}

{% block title %}FormaGreen::Connexion{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="main-panel">
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-6">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}
                            <div class="card">
                                <img class="card-img-top" src="../assets/img/reboisement.jpg" alt="Card image cap">
                                <div class="card-header card-header-success">
                                    <h4 class="card-title text-bold font-weight-bold">FormaGreen</h4>
                                    <p class="card-category">Connectez vous pour accéder à votre espace de gestion</p>
                                </div>
                                <div class="card-body">
                                    <form method="post">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="inputEmail" class="bmd-label-floating">Email</label>
                                                    <input type="email" id="inputEmail" name="email"
                                                           class="form-control" autofocus
                                                           required autocomplete>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="inputPassword" class="bmd-label-floating">Mot de
                                                        passe</label>
                                                    <input type="password" id="inputPassword" name="password"
                                                           class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-success pull-right">Se connecter</button>
                                        <div class="clearfix"></div>
                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
